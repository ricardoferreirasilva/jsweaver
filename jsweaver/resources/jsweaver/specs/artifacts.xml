<?xml version="1.0"?>

<artifacts>

	<!-- Global Joinpoint -->
	<!-- These properties are shared by all joinpoints -->
	<global>
		<attribute name="root" type="joinpoint" tooltip="Returns the 'project' joinpoint" />
		<attribute name="type" type="string" tooltip="The type of the node" />
	</global>
	
	<!-- PROGRAM -->
	<artifact class="project">
		<attribute name="functions" type="joinpoint[]" tooltip="Returns the functions" />
	</artifact>
	
	<artifact class="file">
		<attribute name="path" type="string" tooltip="Absolute path of the program file." />
	</artifact>
	<artifact class="declaration">
		<attribute name="id" type="string" tooltip="ID of the declaration (variable name)." />
	</artifact>
	


</artifacts>